<%= form_for(@user, html: {class: "form-horizontal well"}) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <label for="user_name" class="col-sm-2 control-label">名前 :</label>
      <div class="col-sm-10">
          <%= f.text_field :name, :class => "form-control", :placeholder => "Your name" %>
      </div>
  </div>
  <div class="form-group">
      <label for="user_email" class="col-sm-2 control-label">メールアドレス :</label>
      <div class="col-sm-10">
          <%= f.text_field :email, :class => "form-control", :placeholder => "Your email address" %>
      </div>
  </div>
  <div class="form-group">
      <label for="user_area" class="col-sm-2 control-label">地域 :</label>
      <div class="col-sm-10">
          <%= f.text_field :area, :class => "form-control", :placeholder => "Your area" %>
      </div>
  </div>
  <div class="form-group">
      <label for="user_profile" class="col-sm-2 control-label">自己紹介 :</label>
      <div class="col-sm-10">
          <%= f.text_area :profile, :class => "form-control", :placeholder => "self introduction" %>
      </div>
  </div>
  <div class="col-sm-6 col-sm-offset-3"></div>
    <%= f.submit class: "btn btn-sm btn-primary center-block update-button" %>
  </div>
<% end %>
